<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="api_root_url"
        android:title="API root URL"
        android:defaultValue="http://buendia.whitespell.com:8080/"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />


    <!-- A checkbox for choosing to use OpenMRS as the backing server rather than the normal
      buendia server -->
    <CheckBoxPreference
        android:key="use_openmrs"
        android:title="@string/pref_title_use_openmrs"
        android:summary="@string/pref_description_use_openmrs"
        android:defaultValue="true" />

    <!-- the server to use for OpenMRS -->
    <EditTextPreference
        android:key="openmrs_root_url"
        android:title="@string/pref_title_openmrs_root_url"
        android:defaultValue="http://104.155.15.141:8080/openmrs/ws/rest/v1/projectbuendia"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <!-- The user to use for OpenMRS requests -->
    <EditTextPreference
        android:key="openmrs_user"
        android:title="OpenMRS username"
        android:defaultValue="admin"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="none"
        android:singleLine="true"
        android:maxLines="1" />

    <!-- The password to use for OpenMRS requests -->
    <EditTextPreference
        android:key="openmrs_password"
        android:title="OpenMRS password"
        android:defaultValue="your-password-here"
        android:selectAllOnFocus="true"
        android:inputType="textPassword"
        android:capitalize="none"
        android:singleLine="true"
        android:maxLines="1" />
</PreferenceScreen>

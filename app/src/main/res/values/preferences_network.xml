<?xml version="1.0" encoding="utf-8"?>

<!-- Resources related to the network configuration. -->
<resources
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UnusedResources">

    <!-- See build.gradle for the default OpenMRS root URL, username, and password, -->
    <!-- which can be set with parameters passed into Gradle at build time. -->

    <!-- The default value for whether to keep XForm instances locally. -->
    <bool name="keep_form_instances_locally_default">false</bool>

    <!-- The default value for whether Xform submission should update the client cache -->
    <bool name="xform_update_client_cache">true</bool>

    <!-- The default value for whether observations should sync incrementally -->
    <bool name="incremental_observation_update">true</bool>

    <!-- The title for the preference for choosing the OpenMRS user -->
    <string name="pref_title_openmrs_user">OpenMRS username</string>
    <!-- The title for the preference for choosing the OpenMRS password -->
    <string name="pref_title_openmrs_password">OpenMRS password</string>
    <!-- The title for the preference for choosing the URL for the package server -->
    <string name="pref_title_package_server_url">Package server URL</string>
    <!-- The title for the preference for choosing the URL for the package server -->
    <string name="pref_title_apk_update_interval_secs">APK update interval (s)</string>
</resources>
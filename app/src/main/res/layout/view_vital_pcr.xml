<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:background="@color/vital_unknown">

    <TextView
        android:id="@+id/vital_name_pcr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/vital_fg_dark"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="PCR" />

    <org.msf.records.widget.AutoResizeTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/vital_name_pcr"
        android:padding="8dp"
        android:gravity="center"
        android:textColor="@color/vital_fg_dark"
        android:textSize="56sp"
        android:maxLines="2"
        android:id="@+id/patient_chart_vital_pcr"

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="20sp"
                android:textColor="#999999"
                android:text="Last Updated"/>

            <TextView
                android:id="@+id/last_updated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="20sp"
                android:text="Never" />

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="128dp">

                <org.msf.records.view.VitalView
                    android:id="@+id/vital_temperature"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="#01579b"
                    android:layout_span="2"
                    app:vitalName="Temperature"
                    app:vitalValue="38.5°"/>

                <org.msf.records.view.VitalView
                    android:id="@+id/vital_pcr"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="#01579b"
                    android:layout_span="2"
                    app:vitalName="PCR"
                    app:vitalValue="29.5/28.1"/>

                <org.msf.records.view.VitalView
                    android:id="@+id/vital_days_admitted"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="#01579b"
                    android:layout_span="2"
                    app:vitalName="Days Admitted"
                    app:vitalValue="9"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="128dp">

                <org.msf.records.view.VitalView
                    android:id="@+id/vital_food_drink"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="#01579b"
                    android:layout_span="2"
                    app:vitalName="Food/Drink"
                    app:vitalValue="Liquid Food"/>

                <org.msf.records.view.VitalView
                    android:id="@+id/vital_responsiveness"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="#01579b"
                    android:layout_span="2"
                    app:vitalName="Responsiveness"
                    app:vitalValue="Unconscious"/>

                <org.msf.records.view.VitalView
                    android:id="@+id/vital_mobility"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="#01579b"
                    android:layout_span="2"
                    app:vitalName="Mobility"
                    app:vitalValue="Can't Walk"/>

            </TableRow>

        </TableLayout>


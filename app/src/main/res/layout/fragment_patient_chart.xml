<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="org.msf.records.ui.PatientChartFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="30sp"
            android:gravity="left"
            android:text="FirstName LastName"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="30sp"
            android:gravity="right"
            android:text="PatientID#"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="left"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/darker_gray"
            android:text="Age"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="left"
            android:fontFamily="sans-serif-condensed"
            android:text="Sex"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="right"
            android:fontFamily="sans-serif-condensed"
            android:text="EMC Location/Tent#"
            android:textColor="@android:color/darker_gray"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="left"
            android:text="Day 4"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="right"
            android:fontFamily="sans-serif-condensed"
            android:text="29 NOV 2014 07:18"/>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <include
                layout="@layout/view_vital_general_condition"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="4dp" />

            <include
                layout="@layout/view_vital_temperature"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="4dp" />

            <include
                layout="@layout/view_vital_pcr"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="4dp" />

            <include
                layout="@layout/view_vital_special"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="4dp" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.msf.records.view.VitalView
                android:id="@+id/vital_responsiveness"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="4dp"
                android:background="#01579b"
                app:vitalName="Conscious"
                app:vitalValue="Pain"/>

            <org.msf.records.view.VitalView
                android:id="@+id/vital_mobility"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="4dp"
                android:background="#01579b"
                app:vitalName="Mobility"
                app:vitalValue="Can't Walk"/>

            <org.msf.records.view.VitalView
                android:id="@+id/vital_diet"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="4dp"
                android:background="#01579b"
                app:vitalName="Diet"
                app:vitalValue="Liquid Food"/>

            <org.msf.records.view.VitalView
                android:id="@+id/vital_food_drink"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="4dp"
                android:background="#01579b"
                app:vitalName="Hydration"
                app:vitalValue="IV Required"/>

        </TableRow>

    </TableLayout>

</LinearLayout>
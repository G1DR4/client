<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="org.msf.records.ui.PatientChartFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="20sp"
            android:textColor="#999999"
            android:text="Last Updated"/>

        <TextView
            android:id="@+id/last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="20sp"
            android:text="Never" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <include
                layout="@layout/view_vital_general_condition"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="4dp" />

            <include
                layout="@layout/view_vital_temperature"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="4dp" />

            <include
                layout="@layout/view_vital_pcr"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="4dp" />

            <include
                layout="@layout/view_vital_special"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="4dp" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.msf.records.view.VitalView
                android:id="@+id/vital_responsiveness"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="4dp"
                android:background="#01579b"
                app:vitalName="Conscious"
                app:vitalValue="Pain"/>

            <org.msf.records.view.VitalView
                android:id="@+id/vital_mobility"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="4dp"
                android:background="#01579b"
                app:vitalName="Mobility"
                app:vitalValue="Can't Walk"/>

            <org.msf.records.view.VitalView
                android:id="@+id/vital_diet"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="4dp"
                android:background="#01579b"
                app:vitalName="Diet"
                app:vitalValue="Liquid Food"/>

            <org.msf.records.view.VitalView
                android:id="@+id/vital_food_drink"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="4dp"
                android:background="#01579b"
                app:vitalName="Hydration"
                app:vitalValue="IV Required"/>

        </TableRow>

    </TableLayout>

</LinearLayout>
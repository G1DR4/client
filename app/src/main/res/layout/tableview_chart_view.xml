<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <view class="org.msf.records.widget.FastDataGridView$LinkableRecyclerView"
            android:layout_column="1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/chart_col_headers" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <view class="org.msf.records.widget.FastDataGridView$LinkableRecyclerView"
            android:overScrollMode="never"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/chart_row_headers" />
        <view class="org.msf.records.widget.FastDataGridView$LinkableScrollView"
            android:id="@+id/chart_grid_vertical_scrollview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:layout_height="match_parent">
            <view class="org.msf.records.widget.FastDataGridView$LinkableRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chart_cells" />
        </view>
    </TableRow>
</TableLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/patient_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textIsSelectable="true"
    android:background="#dddddd">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:clipToPadding="false">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:showDividers="middle"
                    android:divider="?android:dividerVertical"
                    android:id="@+id/patient_basic_overview_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/vertical_small_horizontal_large"
                        android:dividerPadding="0dp"
                        android:showDividers="none"
                        android:weightSum="6"
                        android:id="@+id/patient_name_row">
                        <LinearLayout
                            style="@style/stacked_small"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/patient_name_and_id_container">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="32dp"
                                android:layout_marginLeft="32dp"
                                android:layout_marginBottom="32dp"
                                android:id="@+id/patient_name_and_id_inner_container">

                                <TextView
                                    android:id="@+id/patient_overview_id"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textStyle="italic"
                                    android:textSize="24sp"
                                    android:text="HG78190"
                                    android:textColor="@android:color/darker_gray"
                                    android:layout_marginBottom="12dp"/>

                                <TextView
                                    android:id="@+id/patient_overview_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="36sp"
                                    android:textIsSelectable="true"
                                    android:fontFamily="sans-serif-light"
                                    android:text="Gil Julio"
                                    android:clickable="true"/>

                                <TextView
                                    android:drawableLeft="@drawable/home_icon"
                                    android:id="@+id/patient_overview_location"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textSize="18sp"
                                    android:text="Probable, Tent 7, Bed 139"
                                    android:gravity="center_vertical"
                                    android:clickable="true"
                                    android:layout_marginBottom="12dp"
                                    android:visibility="gone"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textSize="18sp"
                                        android:text="Male, "
                                        android:gravity="center_vertical"
                                        android:clickable="true"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textSize="18sp"
                                        android:text="18 years"
                                        android:gravity="center_vertical"
                                        android:clickable="true"/>

                                </LinearLayout>




                            </LinearLayout>

                            <LinearLayout
                                style="?android:buttonBarStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <Button
                                    android:id="@+id/patient_overview_edit_btn"
                                    style="?android:buttonBarButtonStyle"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Edit"
                                    android:visibility="gone"/>
                                <Button
                                    android:id="@+id/patient_overview_flag_btn"
                                    style="?android:buttonBarButtonStyle"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Flag"
                                    android:visibility="gone"/>
                                <Button
                                    android:id="@+id/patient_overview_nfc_btn"
                                    style="?android:buttonBarButtonStyle"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Assign New Bracelet"
                                    android:visibility="gone" />

                            </LinearLayout>


                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/patient_overview_status"
                            style="@style/stacked_small"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:background="#D9E200"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:paddingRight="8dp"
                            android:paddingLeft="8dp"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:layout_margin="20dp">


                            <ImageView
                                android:id="@+id/patient_overview_status_icon"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/round_can_be_discharged"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentRight="true" />

                            <TextView
                                android:id="@+id/patient_overview_status_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Can be discharged"
                                android:gravity="center_horizontal"
                                android:layout_below="@+id/patient_overview_status_icon"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/patient_overview_row"
                        android:showDividers="none"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        style="@style/row">
                        <LinearLayout
                            android:id="@+id/patient_overview_gender"
                            style="@style/cell">

                            <TextView
                                style="@style/cell_subheading"
                                android:text="@string/overview_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/patient_overview_gender_label" />

                            <TextView
                                android:id="@+id/patient_overview_gender_tv"
                                style="@style/cell_heading"
                                android:text="Male"
                                android:layout_margin="8dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/patient_overview_age"
                            style="@style/cell">

                            <TextView
                                style="@style/cell_subheading"
                                android:text="@string/overview_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/patient_overview_age_label" />

                            <TextView
                                android:id="@+id/patient_overview_age_tv"
                                style="@style/cell_heading"
                                android:text="18 years"
                                android:layout_margin="8dp" />

                        </LinearLayout>
                        <LinearLayout
                            style="@style/cell"
                            android:id="@+id/patient_overview_days_since_admission">

                            <TextView
                                style="@style/cell_subheading"
                                android:text="@string/overview_days_since_admission"
                                android:id="@+id/patient_overview_days_since_admission_label" />

                            <TextView
                                android:id="@+id/patient_overview_days_since_admission_tv"
                                style="@style/cell_heading"
                                android:text="Day 21"
                                android:layout_margin="8dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/patient_overview_assigned_location"
                            style="@style/cell"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/cell_subheading"
                                android:text="@string/overview_assigned_location"
                                android:id="@+id/patient_overview_assigned_location_label" />

                            <TextView
                                android:id="@+id/patient_overview_assigned_location_tv"
                                android:text="Suspect Zone\nTent 5 Bed 3"
                                android:layout_margin="8dp"
                                android:singleLine="false"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                style="@style/cell_heading" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/patient_overview_important_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/important_border"
                android:textIsSelectable="true"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:text="Important: Make sure the child gets fed every 6 hours. Celebrated contrasted discretion him sympathize her collecting occasional. Do answered bachelor occasion in of offended no concerns. Supply worthy warmth branch of no ye. Voice tried known to as my to."
                android:visibility="gone"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/patient_detail_pager_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context="org.msf.records.ui.PatientDetailOverviewFragment"
                tools:ignore="MergeRootFrame" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
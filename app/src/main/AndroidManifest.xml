<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.msf.records" >

    <!-- used for a unique identifier for forms for JavaRosa in ODK Collect -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- used for ODK collect forms -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:name="org.msf.records.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Register providers for forms and form data. -->
        <provider
            android:name="org.odk.collect.android.provider.FormsProvider"
            android:authorities="org.msf.projectbuendia.odk.collect.android.provider.odk.forms"
            android:exported="true" />
        <provider
            android:name="org.odk.collect.android.provider.InstanceProvider"
            android:authorities="org.msf.projectbuendia.odk.collect.android.provider.odk.instances"
            android:exported="true" />

        <activity
            android:name=".ui.UserLoginActivity"
            android:label="@string/title_user_login" >
            <intent-filter>
            <action android:name="android.intent.action.SEARCH"/>

            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.PatientListActivity"
            android:label="@string/title_patient_list" >
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.SEARCH"/>-->

                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.PatientDetailActivity"
            android:label="@string/title_patient_detail"
            android:parentActivityName=".ui.PatientListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.msf.records.ui.PatientDetailActivity" />
        </activity>
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.PatientListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.msf.records.ui.SettingsActivity" />
        </activity>

        <activity
            android:name=".ui.PatientAddActivity"
            android:label="@string/title_activity_patient_add" >
        </activity>
        <meta-data android:name="com.crashlytics.ApiKey" android:value="0a31f10a42050e1a7c9ce97ace4fda4c5235f280" />
    </application>

</manifest>